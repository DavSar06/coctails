<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background_color"
    tools:context=".activities.CreateCocktailActivity"
    tools:ignore="HardcodedText">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBack"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_back"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Create your own recipe"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_15ssp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/imageBack"
        app:layout_constraintBottom_toBottomOf="@id/imageBack"
        app:layout_constraintLeft_toRightOf="@id/imageBack"
        app:layout_constraintRight_toLeftOf="@id/headerHolder"/>

    <View
        android:id="@+id/headerHolder"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainRed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerHolder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_16sdp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/header_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publish your recipe"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp"
            android:paddingLeft="@dimen/_5sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_15sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cocktail Name"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:padding="@dimen/_5sdp"
            />

        <EditText
            android:id="@+id/cocktailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:hint="Enter cocktail name..."
            android:textColorHint="@color/grey"
            android:inputType="text"
            android:textColor="@color/white"
            android:background="@drawable/borders_for_edittext"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:padding="@dimen/_5sdp"
            />

        <EditText
            android:id="@+id/cocktailRecipe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:hint="Enter recipe..."
            android:textColorHint="@color/grey"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:background="@drawable/borders_for_edittext"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:padding="@dimen/_5sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_10sdp">

            <FrameLayout
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/cocktailImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="@dimen/_30sdp"
                    app:riv_border_width="1dp"
                    app:riv_border_color="@color/background_color_dark"
                    android:background="@drawable/image_background_cropped"/>
                <TextView
                    android:id="@+id/imageChooseText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Click to choose image"/>
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/publishRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publish"
            android:textSize="@dimen/_15sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/button_background"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>