<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/background_color_light"
    android:background="@drawable/button_background"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_5sdp"
    android:paddingVertical="@dimen/_10sdp"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/_10sdp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:scaleType="centerCrop"
        app:circularflow_angles="50"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/profile_icon_type"
        app:shapeAppearanceOverlay="@style/ImageView.Circle"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp">

        <TextView
            android:id="@+id/commenter"
            android:text="@string/commenter_name"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/garute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/comment"
            android:text=""
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/garute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"/>

    </LinearLayout>

</LinearLayout>