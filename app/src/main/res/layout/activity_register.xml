<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:paddingHorizontal="@dimen/_40sdp"
    android:paddingVertical="@dimen/_10sdp"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activities.RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Logintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:fontFamily="@font/metropolislight"
            android:gravity="center"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="@dimen/_40ssp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="center"
            android:layout_weight="75"
            android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout

                    android:id="@+id/register_username_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_65sdp"
                    app:hintTextColor="@color/white"
                    app:errorTextColor="@color/red_light"
                    app:boxStrokeColor="@color/grey_dark"
                    android:hint="Username"
                    android:textColorHint="@color/white"
                    app:endIconMode="clear_text"
                    app:helperTextEnabled="true"
                    app:helperText=""
                    app:helperTextTextColor="@color/white"
                    app:boxStrokeErrorColor="@color/red_light"
                    app:errorEnabled="true"
                    app:boxBackgroundColor="@color/background_color_light"
                    app:errorIconDrawable="@drawable/ic_baseline_error_24"
                    app:endIconTint="@color/white"
                    app:counterTextColor="@color/white"
                    app:startIconDrawable="@drawable/user_icon"
                    app:startIconTint="@color/white"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/register_username"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:inputType="textUri"
                        android:textSize="@dimen/_14sdp"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/register_email_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                app:hintTextColor="@color/white"
                android:hint="Email"
                android:textColorHint="@color/white"
                app:endIconMode="clear_text"
                app:errorTextColor="@color/red_light"
                app:boxStrokeColor="@color/grey_dark"
                app:helperTextTextColor="@color/white"
                app:helperTextEnabled="true"
                app:boxStrokeErrorColor="@color/red_light"
                app:helperText=" "
                app:errorEnabled="true"
                app:boxBackgroundColor="@color/background_color_light"
                app:errorIconDrawable="@drawable/ic_baseline_error_24"
                app:endIconTint="@color/white"
                app:counterTextColor="@color/white"
                app:startIconDrawable="@drawable/ic_baseline_alternate_email_24"
                app:startIconTint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_email"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_14sdp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/register_password_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                app:hintTextColor="@color/white"
                android:hint="Password"
                android:textColorHint="@color/white"
                app:errorTextColor="@color/red_light"
                app:boxStrokeColor="@color/grey_dark"
                app:endIconMode="password_toggle"
                app:helperTextTextColor="@color/white"
                app:helperTextEnabled="true"
                app:helperText=" "
                app:errorEnabled="true"
                app:boxStrokeErrorColor="@color/red_light"
                app:boxBackgroundColor="@color/background_color_light"
                app:errorIconDrawable="@drawable/ic_baseline_error_24"
                app:endIconTint="@color/white"
                app:counterTextColor="@color/white"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:startIconTint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_password"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:textSize="@dimen/_14sdp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/register_password_confirm_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_65sdp"
                app:hintTextColor="@color/white"
                android:hint="Confirm Password"
                android:textColorHint="@color/white"
                app:endIconMode="password_toggle"
                app:boxStrokeErrorColor="@color/red_light"
                app:errorTextColor="@color/red_light"
                app:boxStrokeColor="@color/grey_dark"
                app:helperTextTextColor="@color/white"
                app:helperTextEnabled="true"
                app:helperText=" "
                app:errorEnabled="true"
                app:boxBackgroundColor="@color/background_color_light"
                app:errorIconDrawable="@drawable/ic_baseline_error_24"
                app:endIconTint="@color/white"
                app:counterTextColor="@color/white"
                app:startIconDrawable="@drawable/ic_baseline_lock_24"
                app:startIconTint="@color/white"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/register_password_confirm"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:textSize="@dimen/_14sdp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/are_you_older_18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@color/background_color_light"
                android:textSize="@dimen/_14ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:buttonTint="@color/white"
                android:textColor="@color/white"
                android:paddingStart="@dimen/_5sdp"
                app:errorShown="false"
                android:text="Are you older 18" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/grey"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/black"
                android:fontFamily="@font/metropolisbold"
                android:textSize="@dimen/_15sdp"/>


            <TextView
                android:id="@+id/register_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:background="@drawable/circle"
                android:fontFamily="@font/metropolisbold"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"/>
        </LinearLayout>
</LinearLayout>