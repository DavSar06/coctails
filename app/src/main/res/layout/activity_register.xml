<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:paddingHorizontal="@dimen/_40sdp"
    android:paddingVertical="@dimen/_10sdp"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activities.RegisterActivity">


    <TextView
        android:id="@+id/Logintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:text="Register"
        android:layout_weight="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/metropolislight"
        android:textSize="@dimen/_40ssp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="top"
            android:orientation="vertical">


            <EditText
                android:id="@+id/register_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:backgroundTint="@color/background_color_light"
                android:layout_weight="0"
                android:background="@drawable/borders_for_edittext"
                android:drawableStart="@drawable/user_icon"
                android:drawablePadding="@dimen/_12sdp"
                android:hint="Usename"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:fontFamily="@font/metropolislight"
                android:maxLines="1"
                android:paddingStart="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_weight="0"
                android:background="@drawable/borders_for_edittext"
                android:drawableStart="@drawable/ic_baseline_alternate_email_24"
                android:drawablePadding="@dimen/_12sdp"
                android:hint="Email"
                android:backgroundTint="@color/background_color_light"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:fontFamily="@font/metropolislight"
                android:maxLines="1"
                android:paddingStart="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_15sdp" />


            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_weight="0"
                android:background="@drawable/borders_for_edittext"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="@dimen/_12sdp"
                android:backgroundTint="@color/background_color_light"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingStart="@dimen/_12sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:fontFamily="@font/metropolislight"
                android:textSize="@dimen/_15sdp" />


            <EditText
                android:id="@+id/register_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:backgroundTint="@color/background_color_light"
                android:layout_weight="0"
                android:background="@drawable/borders_for_edittext"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="@dimen/_12sdp"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:paddingStart="@dimen/_12sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/metropolislight"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_15sdp" />

            <CheckBox
                android:id="@+id/are_you_older_18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/borders_for_edittext"
                android:button="@null"
                android:buttonTint="@color/white"
                android:backgroundTint="@color/background_color_light"
                android:clickable="true"
                android:drawableRight="@drawable/custom_round_checkbox"
                android:drawablePadding="@dimen/_12sdp"
                android:focusable="true"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:text="Are you older 18"
                android:textColor="@color/white"
                android:fontFamily="@font/metropolislight"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/grey"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/black"
                android:fontFamily="@font/metropolisbold"
                android:textSize="@dimen/_15sdp"/>


            <TextView
                android:id="@+id/register_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:background="@drawable/circle"
                android:fontFamily="@font/metropolisbold"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"/>
        </LinearLayout>
</LinearLayout>