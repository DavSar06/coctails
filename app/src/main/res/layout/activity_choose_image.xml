<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".activities.ChooseImageActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBack"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:text="@string/choose_image"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/metropolisbold"
        android:textSize="@dimen/_18ssp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageBack"
        app:layout_constraintBottom_toBottomOf="@id/imageBack"
        app:layout_constraintLeft_toRightOf="@id/imageBack"
        app:layout_constraintRight_toLeftOf="@id/topViewHolder"/>
    
    <View
        android:id="@+id/topViewHolder"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageBack"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/choose_from_library"
                    android:textColor="@color/white"
                    android:fontFamily="@font/metropolisbold"
                    android:textSize="@dimen/_15ssp"/>

                <LinearLayout
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/currentImage"
                        android:src="@drawable/profile_icon_type"
                        style="@style/ImageView.Circle.Rectangle"
                        android:scaleType="centerCrop"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginEnd="@dimen/_10sdp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/addYourImage"
                        android:src="@drawable/ic_plus"
                        android:tint="@color/white"
                        android:padding="@dimen/_20sdp"
                        android:background="@color/grey_dark"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Mi ayl tipi category"
                    android:textColor="@color/white"
                    android:fontFamily="@font/metropolisbold"
                    android:textSize="@dimen/_15ssp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Barman"
                    android:textColor="@color/white"
                    android:fontFamily="@font/metropolisbold"
                    android:textSize="@dimen/_15ssp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Cocktails"
                    android:textColor="@color/white"
                    android:fontFamily="@font/metropolisbold"
                    android:textSize="@dimen/_15ssp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>
                        <ImageView
                            android:background="@drawable/image1"
                            style="@style/ImageView.Circle.Rectangle"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_marginEnd="@dimen/_10sdp"/>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>