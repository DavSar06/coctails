<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:paddingHorizontal="@dimen/_30sdp"
    android:paddingVertical="@dimen/_10sdp"
    android:gravity="center_horizontal"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activities.EmailConfirmActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_300sdp"
        android:src="@drawable/verify_email" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/metropolislight"
            android:gravity="center"
            android:text="Verify Email"
            android:textColor="@color/white"
            android:textSize="@dimen/_35ssp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/metropolislight"
            android:text="Please check your email, and confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/_35sdp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/resend_code_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/metropolislight"
                android:gravity="center"
                android:paddingVertical="@dimen/_5sdp"
                android:text="Resend Code"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/donate_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/orange"
                android:gravity="center"
                android:layout_below="@id/resend_code_confirm"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/change_email_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/metropolislight"
                android:layout_below="@id/donate_btn"
                android:gravity="center"
                android:text="Change Email"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:paddingVertical="@dimen/_5sdp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>



</LinearLayout>