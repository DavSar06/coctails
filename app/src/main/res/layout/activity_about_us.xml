<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".settings.AboutUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back_about_us"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:gravity="top|left"
            android:layout_margin="@dimen/_15sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/garute"
            android:text="@string/about_us"
            android:textColor="@color/white"
            android:textSize="@dimen/_20ssp" />


    </RelativeLayout>


    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/_16ssp"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:fontFamily="@font/garute"
        android:text="@string/introducing_our_company_that_specializes_in_cocktail_recipes_our_app_provides_users_with_access_to_hundreds_of_unique_and_creative_cocktail_recipes_that_can_be_made_right_at_home_with_step_by_step_instructions_and_ingredient_lists_our_app_is_perfect_for_both_beginners_and_seasoned_mixologists_whether_you_re_looking_for_a_classic_cocktail_or_something_more_adventurous_our_app_has_something_for_everyone_download_it_today_and_start_crafting_delicious_cocktails_in_the_comfort_of_your_own_home"/>

</LinearLayout>