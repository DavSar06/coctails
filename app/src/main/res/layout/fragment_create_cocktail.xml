<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background_color"
    tools:context=".activities.MainActivity"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:translationZ="10dp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/endBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="300"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:foregroundGravity="bottom">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Image"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:padding="@dimen/_5sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <FrameLayout
                        android:id="@+id/slider_container"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp">

<!--                        <com.denzcoskun.imageslider.ImageSlider-->
<!--                            android:id="@+id/imageSlider"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:background="@color/background_color_light"-->
<!--                            app:iss_auto_cycle="false"-->
<!--                            app:iss_indicator_align="@string/app_name"-->
<!--                            app:iss_title_background="@drawable/gradient" />-->

                        <TextView
                            android:id="@+id/imageChooseText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/grey_white"
                            android:gravity="center"
                            android:text="Click to choose image"/>

                    </FrameLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/remove_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove Images"
                    android:background="@drawable/button_background"
                    android:textSize="@dimen/_15sdp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/cocktailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:padding="@dimen/_5sdp"
                    android:hint="Cocktail name"
                    android:backgroundTint="@color/background_color_light"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:background="@drawable/borders_for_edittext"
                    android:layout_marginBottom="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cocktail Recipe (Step-by-step)"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:padding="@dimen/_5sdp"
                    />

                <LinearLayout
                    android:id="@+id/cocktailRecipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/recipe_first_step"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="@dimen/_5sdp"
                        android:hint="Step 1"
                        android:textColorHint="@color/grey"
                        android:backgroundTint="@color/background_color_light"
                        android:inputType="text"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:background="@drawable/borders_for_edittext"
                        android:layout_marginBottom="@dimen/_10sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Step"
                        android:background="@drawable/button_background"
                        android:textSize="@dimen/_15sdp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/remove_step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove Last Step"
                        android:background="@drawable/button_background"
                        android:textSize="@dimen/_15sdp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"/>

                </LinearLayout>

                <MultiAutoCompleteTextView
                    android:id="@+id/tagsACTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:padding="@dimen/_5sdp"
                    android:hint="Enter tags(break with commas)"
                    android:ems="10"
                    android:backgroundTint="@color/background_color_light"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:background="@drawable/borders_for_edittext"
                    android:layout_marginBottom="@dimen/_10sdp"/>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/midleBar"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:layout_height="@dimen/_60sdp">

                <TextView
                    android:id="@+id/publishRecipe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_30sdp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_20sdp"
                    android:text="Publish"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
